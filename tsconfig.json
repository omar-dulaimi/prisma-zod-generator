{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["es2019", "DOM"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "src/schemas/**",
    "src/dsrc/**",
    "src/generated/**"
  ]
}
