{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["src/types.ts"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"]
}
